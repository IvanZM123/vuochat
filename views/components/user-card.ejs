<div class="card border-0 shadow">
     <div class="card-body p-3">
          <div class="d-flex">
               <img
                    src="<%= doc.picture %>"
                    width="60px"
                    height="60px"
                    style="object-fit: cover; border-radius: 50%;"
               >
               <div class="mx-2">
                    <div style="font-size: 20px;" class="card-title m-0">
                         <strong><%= doc.name %></strong>
                    </div>
                    <div class="card-subtitle text-muted m-0"><%= doc.username %></div>
                    <small><%= new Date(doc.created_at) %></small>
               </div>
          </div>
          <div class=" pt-3">
               <a href="/profile/chat/<%= doc._id %>">
                    <button class="btn bg-purple text-white w-100">Iniciar conversacion</button>
               </a>
          </div>
     </div>
</div>
