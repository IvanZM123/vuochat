<form
    enctype="multipart/form-data"
    action="/auth/register"
    id="form-validate"
    method="POST"
>
    <div class="form-group">
        <label for="name">Nombres</label>
        <input
            class="form-control <%= message.field == 'name' ? 'is-invalid' : '' %> my-1"
            autocomplete="off"
            name="name"
            id="name"
            autofocus
            required
        >
        <% if (message.field == "name") { %>
            <small class="form-text invalid-feedback"><%= message.text %></small>
        <% } else { %>
            <small class="form-text text-muted">Escriba su nombre de usuario</small>
        <% } %>
    </div>
    <div class="form-group py-2">
        <label for="username">Nombre de usuario</label>
        <input
            class="form-control <%= message.field == 'username' ? 'is-invalid' : '' %> my-1"
            autocomplete="off"
            name="username"
            id="username"
            required
        >
        <% if (message.field == "username") { %>
            <small class="form-text invalid-feedback"><%= message.text %></small>
        <% } else { %>
            <small class="form-text text-muted">Escriba su nombre de usuario</small>
        <% } %>
    </div>
    <div class="form-group py-2">
        <label for="password">Contrase√±a</label>
        <input
            class="form-control <%= message.field == 'password' ? 'is-invalid' : '' %> my-1"
            type="password"
            name="password"
            id="password"
            required
        >
        <% if (message.field == "password") { %>
            <small class="form-text invalid-feedback"><%= message.text %></small>
        <% } else { %>
            <small class="form-text text-muted">Escriba su nombre de usuario</small>
        <% } %>
    </div>
    <button type="submit" class="btn btn-primary w-100">Registrarse</button>
</form>
